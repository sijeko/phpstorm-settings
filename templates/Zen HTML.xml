<templateSet group="Zen HTML">
  <template name="pif" value="&lt;?php if ($CONDITION$): ?&gt;&#10;    $END$&#10;&lt;?php endif ?&gt;" description="&lt;?php if (condition): ?&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="CONDITION" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="pfore" value="&lt;?php foreach ($ITERABLE$ as $VAR_VALUE$): ?&gt;&#10;    $END$&#10;&lt;?php endforeach ?&gt;" description="&lt;?php foreach ($ITERABLE$ as $VAR_VALUE$): ?&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="ITERABLE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR_VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="pec" value="&lt;?= $END$ ?&gt;" description="PHP echo shorthand" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="pech" value="&lt;?= Html::encode($END$) ?&gt;" description="PHP echo with Html::encode() shorthand" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
</templateSet>